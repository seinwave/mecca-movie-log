<%= form_for(@rating) do |f| %>

<div class="field">
  <%= f.label :score %><br />
  <%= f.select :score, options_for_select([ ['A+', 15], ['A', 14], ['A-', 13],
  ['B+', 12], ['B', 11], ['B-', 10], ['C+', 9], ['C', 8], ['C-', 7], ['D+', 6],
  ['D', 5], ['D-', 4], ['F', 3], ['F', 2], ['F', 1] ]) %>
</div>

<div class="field">
  <%= f.label :user_id %><br />
  <%= f.collection_select(:user_id, User.all, :id, :first_name) %>
</div>

<div class="field">
  <%= f.label :new_movie, 'New Movie?' %> <%= f.fields_for :movie, id:
  'new-movie-form' do |movie_fields| %> <%= movie_fields.label :title %> <%=
  movie_fields.text_field :title %> <% end %>
</div>

<div class="field">
  <%= f.label :movie_id %><br />
  <%= f.collection_select(:movie_id, Movie.all, :id, :title) %>
</div>

<div class="field">
  <%= f.label :watched_date %><br />
  <%= f.date_select :watched_date %>
</div>

<div class="actions"><%= f.submit %></div>
<% end %>
